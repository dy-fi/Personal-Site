<div class="modal fade" id="email-modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="email-modal-label">Contact Me</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="https://api.web3forms.com/submit">
                    <!--Web3Forms key and anti-honeypot-->
                    <input type="hidden" name="access_key" value="016b22c2-d3d4-4785-a274-ca4413f62bdf">
                    <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
                    <!--Form Body-->
                    <!-- <h3>Email me</h3> -->

                    <div class="form-group">
                        <label for="email">Your Email</label>
                        <input class='form-control' type="email" min="6" max="200" name="email" id="email" autocomplete="on" required>
                        <small id="email-help" class="form-text text-muted">Your info isn't shared or saved</small>
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input class='form-control' type="text" max="200" name="subject" id="subject">
                    </div>
                    <div class="form-group">
                        <label for="content">Content</label>
                            <textarea class='form-control' max="3000" name="content" id="content" rows="3"></textarea>
                        </label>
                    </div>
                    <div id="submit">
                        <button type="submit" class="btn btn-primary" id="submit-button">Send</button>
                    </div>
                    <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
                </form>
            </div>
            <div class="modal-footer">
                For business inquiries only
            </div>
        </div>
    </div>
</div>

