<form method="POST" action="/email">
    <h3>Email me</h3>
    <div class="form-group">
        <label for="name">Email</label>
        <input class='form-control' type="text" min="6" max="200" name="email">
        <small id="emailHelp" class="form-text text-muted">Your info isn't shared or saved</small>
    </div>

    <div class="form-group">
        <label for="subject">Subject</label>
        <input class='form-control' type="text" max="200" name="subject">
    </div>

    <div class="form-group">
        <label for="content">Content</label>
        <input type="text" class='form-control' max="3000" name="content">
    </div>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

